<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="downloadExtendedConverterManager" parent="converterManager">
		<property name="converters">
			<list merge="true">
				<ref bean="completePdfConverter" />
				<ref bean="completeJpegConverter" />
				<ref bean="completeOcrConverter" />
			</list>
		</property>
	</bean>

	<bean id="completePdfConverter" class="com.bhle.access.download.convert.CompletePdfConverter" />
	<bean id="completeJpegConverter" class="com.bhle.access.download.convert.CompleteJpegConverter" />
	<bean id="completeOcrConverter" class="com.bhle.access.download.convert.CompleteOcrConverter" />
	
	<bean id="downloadExtendedAfterBatchIngestConverterManager" parent="afterBatchIngestConverterManager">
		<property name="converters">
			<list merge="true">
				<ref bean="completePdfConverter" />
				<ref bean="completeJpegConverter" />
				<ref bean="completeOcrConverter" />
			</list>
		</property>
	</bean>
</beans>
