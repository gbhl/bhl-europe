<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:batch="http://www.springframework.org/schema/batch" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
                           http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/context 
                           http://www.springframework.org/schema/context/spring-context.xsd
                           http://www.springframework.org/schema/batch
                           http://www.springframework.org/schema/batch/spring-batch-2.1.xsd">

	<context:component-scan base-package="com.bhle.access.batch" />

	<batch:job id="generateDerivatives">
		<batch:description>Generate all object-based derivatives from Fedora Repository</batch:description>
		<batch:step id="generateObjectBasedDerivatives" next="generatePackageBasedDerivatives">
			<batch:tasklet>
				<batch:chunk reader="fedoraObjectReader" processor="singleObjectConversionProcessor"
					writer="datastreamDerivativeWriter" commit-interval="${batch.commit.interval}" />
			</batch:tasklet>
		</batch:step>
		<batch:step id="generatePackageBasedDerivatives">
			<batch:tasklet>
				<batch:chunk reader="afterBatchIngestConverterReader"
					writer="packageDerivativeWriter" commit-interval="1" />
			</batch:tasklet>
		</batch:step>
	</batch:job>

</beans>