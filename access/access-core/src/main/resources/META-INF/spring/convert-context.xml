	<context:component-scan base-package="com.bhle.access.convert" />

	<bean id="convertorManager" class="com.bhle.access.convert.ConvertorManager">
		<property name="convertors">
			<list>
				<ref bean="tiff2Jp2Convertor" />
				<ref bean="tiff2SizeConvertor" />
				<ref bean="ocr2OcrConvertor" />
				<ref bean="Olef2DcConvertor" />
				<ref bean="Olef2OlefConvertor" />
