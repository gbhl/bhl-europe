		</property>
	</bean>

	<bean id="tiff2SizeConvertor" class="com.bhle.access.convert.Tiff2SizeConvertor">
		<property name="contentModels">
			<list>
				<value>info:fedora/bhle-cmodel:pageCModel</value>
				<value>info:fedora/bhle-cmodel:imageCModel</value>
			</list>
		</property>
	</bean>
	
